# Environment Variables for MoistureSensor MQTT Client
# Copy this file to .env and update with your actual values

# MQTT Configuration
MQTT_BROKER=your-mqtt-broker.local
MQTT_PORT=1883
MQTT_USERNAME=your-mqtt-username
MQTT_PASSWORD=your-mqtt-password
MQTT_TOPIC=moisture/+/data

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=moisture_db
DB_USER=moisture_user
DB_PASSWORD=your-secure-password

# Client Configuration
CLIENT_ID=moisture_client_001
MAX_RUNTIME=300
RECONNECT_DELAY=5

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=/var/log/moisture_client/moisture_client.log

# Security (if using SSL/TLS)
MQTT_USE_SSL=false
MQTT_CA_CERT=/path/to/ca.crt
MQTT_CERT_FILE=/path/to/client.crt
MQTT_KEY_FILE=/path/to/client.key